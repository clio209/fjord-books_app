<p id="notice"><%= notice %></p>

<h1><%= Report.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= Report.human_attribute_name(:title) %></th>
      <th><%= Report.human_attribute_name(:content) %></th>
      <th><%= Report.human_attribute_name(:user_id) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.content %></td>
        <td><%= report.user_id %></td>
        <td><%= report.created_at.to_s(:datetime_jp) %></td>
        <td><%= link_to '詳細', report %></td>
        <% if report.user == current_user %>
          <td><%= link_to '編集', edit_report_path(report) %></td>
          <td><%= link_to '削除', report, method: :delete, data: { confirm: 'よろしいですか?' } %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @reports %>

<br>

